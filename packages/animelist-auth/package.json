{
  "name": "@animelist/auth",
  "version": "0.1.2",
  "description": "Provides an API to authenticate users with `MyAnimeList`",
  "author": "Freddy L.",
  "license": "MIT",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint ./src",
    "entrypoints": "tsx entrypoints.script.mts",
    "build:types": "tsc --emitDeclarationOnly",
    "build": "rimraf dist && pnpm build:types && rollup --config rollup.config.ts --configPlugin rollup-plugin-swc3 && pnpm entrypoints",
    "prepublishOnly": "pnpm build"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "typings": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/Neo-Ciber94/animelist.git",
    "directory": "packages/animelist-auth"
  },
  "keywords": [
    "anime",
    "myanimelist",
    "authorization",
    "oauth2",
    "node",
    "typescript"
  ],
  "dependencies": {
    "@animelist/client": "workspace:*",
    "@animelist/core": "workspace:*",
    "cookie": "^0.5.0",
    "crypto-es": "2.0.4",
    "jose": "^4.15.2",
    "zod": "3.22.2"
  },
  "devDependencies": {
    "@types/cookie": "^0.5.2",
    "@types/node": "20.6.2",
    "dotenv": "^16.3.1",
    "eslint": "^8.49.0",
    "typescript": "^5.2.2",
    "vitest": "^0.34.4"
  },
  "publishConfig": {
    "access": "public"
  },
  "./package.json": "./package.json",
  ".": {
    "import": "./dist/index.mjs",
    "require": "./dist/index.js",
    "default": "./dist/index.js"
  },
  "./client": {
    "import": "./dist/client/index.mjs",
    "require": "./dist/client/index.js",
    "default": "./dist/client/index.js"
  },
  "./server": {
    "import": "./dist/server/index.mjs",
    "require": "./dist/server/index.js",
    "default": "./dist/server/index.js"
  },
  "./common": {
    "import": "./dist/common/index.mjs",
    "require": "./dist/common/index.js",
    "default": "./dist/common/index.js"
  },
  "files": [
    "src",
    "dist",
    "client",
    "common",
    "server",
    "package.json",
    "README.MD",
    "!**/*.test.*"
  ]
}
