{
  "name": "@animelist/client",
  "author": "Freddy L.",
  "version": "0.1.2",
  "description": "Provide an interface to communicate with MyAnimeList API",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "typings": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/Neo-Ciber94/animelist.git",
    "directory": "packages/animelist-client"
  },
  "keywords": [
    "anime",
    "myanimelist",
    "api",
    "node",
    "typescript"
  ],
  "scripts": {
    "typecheck": "tsc --noEmit",
    "lint": "eslint ./src",
    "build:types": "tsc --emitDeclarationOnly",
    "test": "vitest --run",
    "build": "rimraf dist && pnpm build:types && rollup --config rollup.config.ts --configPlugin rollup-plugin-swc3",
    "prepublishOnly": "pnpm build"
  },
  "devDependencies": {
    "@animelist/core": "workspace:*",
    "dotenv": "^16.3.1",
    "eslint": "^8.49.0",
    "typescript": "5.2.2",
    "vitest": "^1.2.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "src",
    "dist",
    "package.json",
    "README.MD",
    "!**/*.test.*"
  ]
}
